postgresql
__________________
python-dev postgresql-server-dev-all
sudo apt-get build-dep python-psycopg2
sudo pip install psycopg2 


psql create pgis db
__________________
### create user hungr and login as hungr (su - hungr)
###
createdb hungr
createlang plpgsql hungr
psql -d hungr -f /usr/share/postgresql/9.1/contrib/postgis-1.5/postgis.sql
psql -d hungr -f /usr/share/postgresql/9.1/contrib/postgis-1.5/spatial_ref_sys.sql